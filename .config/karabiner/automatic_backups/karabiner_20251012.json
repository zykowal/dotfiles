{
    "title": "Kanata-style Configuration",
    "rules": [
        {
            "description": "Caps Lock: Escape on tap, Control on hold",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Tab: Tab on tap, Numbers layer on hold",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "tab"
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "numbers_layer",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "numbers_layer",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "tab"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Space: Space on tap, Symbols layer on hold",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar"
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "symbols_layer",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "symbols_layer",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Quote: Quote on tap, Function layer on hold",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote"
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "function_layer",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "function_layer",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "quote"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Numbers Layer - Right hand number pad",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {"key_code": "u"},
                    "to": [{"key_code": "7"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "i"},
                    "to": [{"key_code": "8"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "o"},
                    "to": [{"key_code": "9"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "p"},
                    "to": [{"key_code": "0"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "j"},
                    "to": [{"key_code": "4"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "k"},
                    "to": [{"key_code": "5"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "l"},
                    "to": [{"key_code": "6"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "m"},
                    "to": [{"key_code": "1"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "comma"},
                    "to": [{"key_code": "2"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                },
                {
                    "type": "basic",
                    "from": {"key_code": "period"},
                    "to": [{"key_code": "3"}],
                    "conditions": [{"type": "variable_if", "name": "numbers_layer", "value": 1}]
                }
            ]
        },
